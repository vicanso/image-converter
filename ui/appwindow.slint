import { Button, VerticalBox, ListView, GridBox, ScrollView, HorizontalBox } from "std-widgets.slint";

component TableView inherits Rectangle {
    in property <[string]> columns;
    in property <[[string]]> values;
    in property <bool> processing;
    in property <string> processing-tips;
    in property <string> select-btn-text;
    callback show-open-dialog;

    VerticalBox {
        HorizontalLayout {
            width: parent.width - 28px;
            HorizontalLayout{
                width: 40px;
                Text {
                    text: " ";
                }
                Rectangle {
                    width: 1px;
                    background: gray;
                }
            }
            HorizontalLayout{
                padding-left: 10px;
                Text {
                    text: @tr("File");
                }
                Rectangle {
                    width: 1px;
                    background: gray;
                }
            }
            HorizontalLayout{
                width: 80px;
                Text {
                    horizontal-alignment: center;
                    text: @tr("Size");
                }
                Rectangle {
                    width: 1px;
                    background: gray;
                }
            }
            HorizontalLayout{
                width: 80px;
                Text {
                    horizontal-alignment: center;
                    text: @tr("Savings");
                }
                Rectangle {
                    width: 1px;
                    background: gray;
                }
            }
            HorizontalLayout{
                width: 70px;
                Text {
                    horizontal-alignment: center;
                    text: @tr("Dssim");
                }
            }
        }
        ListView {
            for item in values : Rectangle { 
                background: item[0] == "even" ? root.background.brighter(30%) : root.background;
                HorizontalLayout {
                    padding-bottom: 8px;
                    padding-top: 8px;
                    Text {
                        width: 40px;
                        horizontal-alignment: center;
                        text: item[1];
                    }
                    HorizontalLayout{
                        padding-left: 8px;
                        Text {
                            text: item[2];
                        }
                    }
                    HorizontalLayout {
                        Text {
                            horizontal-alignment: center;
                            width: 80px;
                            text: item[3];
                        }
                    }
                    HorizontalLayout {
                        Text {
                            horizontal-alignment: center;
                            width: 80px;
                            text: item[4];
                        }
                    }
                    HorizontalLayout {
                        Text {
                            horizontal-alignment: center;
                            width: 70px;
                            text: item[5];
                        }
                    }
                }
            }
        }
        HorizontalLayout {
            Button {
                width: 40px;
                text: processing ? select-btn-text : "+";
                clicked => { show-open-dialog(); }
            }
            HorizontalLayout {
                padding-left: 15px;
            Text {
                vertical-alignment: center;
                text: "Select folder of images" + processing-tips;
            }
            }
        }
    }
}

export component AppWindow inherits Window {
    preferred-width: 700px;
    preferred-height: 500px;
    callback show-open-dialog;
    title: @tr("Image Converter");
    in property <[string]> columns;
    in property <[[string]]> values;
    in property <bool> processing;
    in property <string> processing-tips;
    in property <string> select-btn-text;
    default-font-size: 13px;
    default-font-weight: 500;
    TableView {
        show-open-dialog => { show-open-dialog(); }
        columns: columns;
        values: values;
        processing: processing;
        background: root.background;
        processing-tips: processing-tips;
        select-btn-text: select-btn-text;
    }
}
